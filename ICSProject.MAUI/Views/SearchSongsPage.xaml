<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ICSProject.MAUI.ViewModels"
             xmlns:models="clr-namespace:ICS_Project.BL.Models;assembly=ICS_Project.BL"
             x:Class="ICSProject.MAUI.Views.SearchSongsPage"
             x:DataType="viewmodels:SearchSongsViewModel"
             Title="Search"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="20">
        
        <!-- Title -->
        <Label Grid.Row="0" 
               Text="Search Songs" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               Margin="0,0,0,20"
               TextColor="Black"/>
        
        <!-- Search Box -->
        <Frame Grid.Row="1" 
               BackgroundColor="#F6EFF8" 
               CornerRadius="20" 
               Padding="15" 
               Margin="0,0,0,15">
            <Entry Text="{Binding SearchText}" 
                   Placeholder="Type to search songs..."
                   BackgroundColor="Transparent"
                   FontSize="16"
                   TextColor="Black"/>
        </Frame>
        
        <!-- Selection Info + Add Button -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
            <Label Grid.Column="0"
                   Text="{Binding SelectionMessage}"
                   FontSize="14"
                   TextColor="Gray"
                   VerticalOptions="Center"/>
            
            <Button Grid.Column="1"
                    Text="Add Selected"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontSize="12"
                    Padding="10,5"
                    CornerRadius="15"
                    Command="{Binding AddSelectedSongsCommand}"/>
        </Grid>
        
        <!-- Live Results -->
        <CollectionView Grid.Row="3" 
                        ItemsSource="{Binding FilteredSongs}"
                        BackgroundColor="Transparent">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:SelectableSongModel">
                    <Border StrokeThickness="2" 
                            Stroke="Transparent"
                            BackgroundColor="White"
                            Margin="0,2">
                        <Border.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                <Setter Property="Stroke" Value="Green" />
                                <Setter Property="BackgroundColor" Value="LightGreen" />
                            </DataTrigger>
                        </Border.Triggers>
                        
                        <Grid ColumnDefinitions="Auto,*" Padding="15,10">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SearchSongsViewModel}}, Path=AddSongCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>
                            
                            <!-- Selection Indicator -->
                            <Label Grid.Column="0"
                                   Text="✓"
                                   FontSize="20"
                                   TextColor="Green"
                                   VerticalOptions="Center"
                                   Margin="0,0,10,0"
                                   IsVisible="{Binding IsSelected}"/>
                            
                            <StackLayout Grid.Column="1">
                                <Label Text="{Binding Song.Name}" 
                                       FontAttributes="Bold" 
                                       FontSize="16"
                                       TextColor="Black"/>
                                <Label Text="{Binding Song.Genre}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>
                                <Label Text="{Binding Song.DurationInSeconds, StringFormat='{0:mm\\:ss}'}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>
                            </StackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" 
                             VerticalOptions="Center"
                             Margin="40">
                    <Label Text="{Binding EmptyMessage}" 
                           FontSize="16" 
                           TextColor="Gray" 
                           HorizontalTextAlignment="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
        
        <!-- Close Button -->
        <Button Grid.Row="4" 
                Text="Close" 
                BackgroundColor="Gray"
                TextColor="White"
                Margin="0,15,0,0"
                Padding="15"
                CornerRadius="10"
                Command="{Binding CloseCommand}"/>
    </Grid>
</ContentPage>