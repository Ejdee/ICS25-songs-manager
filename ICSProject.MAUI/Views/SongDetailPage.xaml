<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:global="using:"
             xmlns:viewModels="using:ICSProject.MAUI.ViewModels"
             x:Class="ICSProject.MAUI.Views.SongDetailPage"
             BackgroundColor="White"
             x:DataType="viewModels:SongDetailViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Edit Song" FontSize="24" FontAttributes="Bold" TextColor="Black"/>

            <Entry Text="{Binding Song.Name}" Placeholder="Name" TextColor="Black"/>
            <Entry Text="{Binding Song.Genre}" Placeholder="Genre" TextColor="Black"/>
            <Entry Text="{Binding Song.Artist}" Placeholder="Artist" TextColor="Black"/>
            <Entry Text="{Binding Song.SongUrl}" Placeholder="Image URL" TextColor="Black"/>
            <Entry Text="{Binding Song.DurationInSeconds}" 
                   Placeholder="Duration (sec)" 
                   Keyboard="Numeric"
                   TextColor="Black"/>

            <Button Text="Save" Command="{Binding SaveCommand}" />
            <Button Text="Delete" Command="{Binding DeleteCommand}" BackgroundColor="Red" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>