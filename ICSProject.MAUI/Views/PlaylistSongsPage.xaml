<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ICSProject.MAUI.ViewModels"
             xmlns:models="clr-namespace:ICS_Project.BL.Models;assembly=ICS_Project.BL"
             xmlns:views="clr-namespace:ICSProject.MAUI.Views"
             x:Class="ICSProject.MAUI.Views.PlaylistSongsPage"
             x:DataType="viewmodels:PlaylistDetailViewModel"
             BackgroundColor="White"
             Title="{Binding Playlist.Name}">

    <Grid RowDefinitions="Auto,Auto,*" Padding="20">
        <!-- Playlist Details Section -->
        <StackLayout Spacing="10">
            <Label Text="{Binding Playlist.Name}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black" />
            <Label Text="{Binding Playlist.Description}"
                   FontSize="16"
                   TextColor="Gray" />
            <Label Text="{Binding Playlist.SongCount, StringFormat='Songs: {0}'}"
                   FontSize="14"
                   TextColor="Gray" />
            <Label Text="{Binding Playlist.DurationInSeconds, StringFormat='Duration: {0:hh\\:mm\\:ss}'}"
                   FontSize="14"
                   TextColor="Gray" />
        </StackLayout>

        <!-- Search Bar and Edit Button -->
        <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="0,10">
            <!-- Search Bar -->
            <Frame Grid.Column="0"
                   Padding="10"
                   BackgroundColor="#F6EFF8"
                   CornerRadius="20"
                   HasShadow="False">
                <Entry Placeholder="Search songs..."
                       Text="{Binding SongSearchText}"
                       ClearButtonVisibility="WhileEditing"
                       Keyboard="Default"
                       TextColor="Black" />
            </Frame>
    
            <!-- Edit Playlist Button -->
            <Button Grid.Column="1"
                    Text="Edit"
                    Command="{Binding NavigateToEditCommand}"
                    CommandParameter="{Binding Playlist.Id}"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="30,5"
                    FontSize="14"
                    Margin="10,0"
            />
        </Grid>        
        
        <!-- Songs Grid -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding FilteredSongsInPlaylist}"
                        Margin="0,10">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="4"
                                 VerticalItemSpacing="10"
                                 HorizontalItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:SongDetailModel">
                    <views:SongListView BindingContext="{Binding .}" ShowEditButton="False" />
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Empty View -->
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No songs found"
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>